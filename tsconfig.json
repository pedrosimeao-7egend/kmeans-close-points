{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "Bundler",
    "outDir": "dist" // Change the output directory to avoid overwriting input files
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
